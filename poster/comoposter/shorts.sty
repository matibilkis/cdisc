  \def\@tempa{#1}%
  \ifx\@tempa\@empty\relax%
    \mathinner{\lvert#2\rangle}%
  \else%
    \mathinner{\lvert#2\rangle}_{\hspace{-0.1em}#1}%
  \fi}


% ---- Proyectores! ----
\newcommand{\ketbra}[3][]{%
  \def\@tempa{#1}%
  \ifx\@tempa\@empty\relax%
    \mathinner{\lvert#2\rangle\langle #3\rvert}%
  \else%
    \mathinner{\lvert#2\rangle\langle #3\rvert}_{#1}%
  \fi}
\newcommand{\Ketbra}[3][]{%
  \def\@tempa{#1}%
  \ifx\@tempa\@empty\relax%
    \left|#2\middle>\middle<#3\right|%
  \else%
    \left|#2\middle>\middle<#3\right|_{#1}%
  \fi}
